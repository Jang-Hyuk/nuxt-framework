{
	"extends": "../../tsconfig.tsc.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"be/*": ["../backend/src/*"],
			"cm/*": ["../common/src/*"]
		}
	},
	"include": [
		"**/*.js",
		"**/*.ts",
		"**/*.vue",
		"../backend/src/interfaces",
		"../backend/src/types",
		"../frontend/interfaces",
		"../frontend/types",
		"../common/src/interfaces",
		"../common/src/types"
	],
	"exclude": ["coverage", "**/*/*.spec.js"]
}
